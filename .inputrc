# When hitting up/down, cycle through the previous commands which start with the 
# prefix entered, rather than cycling through the last entered commands
"\e[A": history-search-backward
"\e[B": history-search-forward

# Pressing tab will list all completions & select the first one. Pressing it 
# again will cycle through available completions
TAB: menu-complete

# List completions when Shift-Tab
"\e[Z": complete

# Ignore case
set completion-ignore-case on

# On menu-complete, first display the common prefix, then cycle through the 
# options when hitting TAB
set menu-complete-display-prefix on

# Words which have more than one possible completion cause the matches to be
# listed immediately instead of ringing the bell
set show-all-if-ambiguous on
