export CLICOLOR=1                               # adds colours to lists
export PS1="\[\e[0;36m\]\h:\W \u$\[\e[0m\] "    # adds colour to command prompt

# git aliases
alias gs='git status '
alias ga='git add '
alias gb='git branch '
alias gc='git commit'
alias gd='git diff'
alias go='git checkout '
alias gk='gitk --all&'
alias gx='gitx --all'
